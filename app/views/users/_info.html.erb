<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
   
  <tr>
        <th><%= link_to user_followings_path(user) do %>follows:<% end %></th>
　　　　<th><%= user.followings.count %></th>
  </tr>

  　　
  <tr>
　　　 <th><%= link_to user_followers_path(user) do %>followers:<% end %></th>
　　　 <th><%= user.followers.count %></th>
  </tr>
    　　
    <th>
      <% if user != current_user %>
    	<% if current_user.following?(user)  %>
      <%= link_to "フォローを外す", user_relationships_path(user.id), class: 'btn btn-primary' , method: :delete %>
      <% else %>
      <%= link_to "フォローする", user_relationships_path(user.id) , class: 'btn btn-primary' , method: :post %>
      <% end %>
      <% end %>
    </th>
  </tr>
</table>

